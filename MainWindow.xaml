<Window x:Name="disp" x:Class="ITToolKit_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITToolKit_3"
        mc:Ignorable="d"
        Title="ITToolKit™" Height="425" Width="700" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" FontFamily="Yu Gothic UI" SnapsToDevicePixels="True" Loaded="Disp_Loaded" Closing="Disp_Closing">
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
        <Grid>
            <TabControl x:Name="MainTabControl" Margin="10" Grid.Column="0" TabStripPlacement="Top">
                <TabItem x:Name="default" Header="メイン">
                    <Grid Margin="10">
                        <TextBlock Text="寮内インターネットの使用及びPC持込許可に必要な情報の取得" FontSize="16" Foreground="#FF464BA0" VerticalAlignment="Top"/>
                        <StackPanel Margin="10" VerticalAlignment="Bottom" Height="275">
                            <Grid>
                                <Separator VerticalAlignment="Top" Margin="9" Background="{DynamicResource {x:Static SystemColors.ScrollBarBrushKey}}" />
                                <TextBlock HorizontalAlignment="Left" Text="アクティブなネットワーク アダプタ  " Background="White"/>
                            </Grid>
                            <Grid Height="60">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="4"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0">
                                        <TextBlock x:Name="adaptername" Text="Wi-Fi Adapter" HorizontalAlignment="Center" FontWeight="Bold"/>
                                        <TextBlock x:Name="vendorname" Text="Vendor" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Separator Background="{DynamicResource {x:Static SystemColors.ScrollBarBrushKey}}" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>
                                </StackPanel>
                                <Grid Grid.Column="2">
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0">
                                        <TextBox x:Name="phynumber" Text="00:00:00:00:00:00" IsReadOnly="True" HorizontalAlignment="Center" Background="Transparent" FontFamily="Consolas" FontSize="13" BorderBrush="Transparent" TextWrapping="Wrap"/>
                                        <TextBlock Text="(確認: Macアドレスは16進数[0-F])" HorizontalAlignment="Center" FontWeight="Bold"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                            <Grid Height="10"/>
                            <Grid>
                                <Separator VerticalAlignment="Top" Margin="0,9,9,0" Background="{DynamicResource {x:Static SystemColors.ScrollBarBrushKey}}"/>
                                <TextBlock Text="このコンピュータの詳細  " Background="White" HorizontalAlignment="Left"/>
                            </Grid>
                            <Grid>
                                <StackPanel Margin="20">
                                    <TextBlock x:Name="windows" Text="Microsoft Windows"/>
                                    <TextBlock x:Name="version" Text="バージョン ---- (OSビルド -----.---)"/>
                                    <Grid Height="10"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="製造元: "/>
                                            <TextBlock Text="機種名: "/>
                                            <Grid Height="20"/>
                                            <TextBlock Text="総合評価: "/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock x:Name="maker" Text="Maker"/>
                                            <TextBlock x:Name="sysname" Text="Name"/>
                                            <Grid Height="20"/>
                                            <TextBlock x:Name="evaluation" Text="Judge" FontWeight="Bold"/>
                                        </StackPanel>
                                    </Grid>
                                    <StackPanel>
                                        <Grid Height="20"/>
                                        <StackPanel Orientation="Horizontal">
                                            <Button x:Name="reset" Content="再評価(_R)" Width="90" Click="Reset_Click"/>
                                            <Grid Width="10"/>
                                            <Button x:Name="save" Content="評価を保存(_A)" Width="90" Click="Save_Click"/>
                                            <Grid Width="10"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem x:Name="details" Header="評価の詳細">
                    <Grid Margin="10">
                        <TextBlock Text="評価結果の詳細" FontSize="16" Foreground="#FF464BA0" VerticalAlignment="Top"/>
                        <StackPanel Margin="10" VerticalAlignment="Bottom" Height="275">
                            <Grid>
                                <Separator VerticalAlignment="Top" Margin="9" Background="{DynamicResource {x:Static SystemColors.ScrollBarBrushKey}}" />
                                <TextBlock Text="サポート期間  " HorizontalAlignment="Left" Background="White"/>
                            </Grid>
                            <Grid>
                                <Grid Margin="20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="システムのリリースID: "/>
                                        <TextBlock Text="メインストリーム サポート期間: "/>
                                        <TextBlock Text="寮内インターネット/PC申請有効期限: "/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock x:Name="releaseid" Text="0000"/>
                                        <TextBlock x:Name="support" Text="20XX年 X月31日まで"/>
                                        <TextBlock x:Name="active" Text="20XX年 3月31日まで"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                            <Grid>
                                <Separator VerticalAlignment="Top" Margin="0,9,9,0" Background="{DynamicResource {x:Static SystemColors.ScrollBarBrushKey}}"/>
                                <TextBlock Text="チェックリスト  " Background="White" HorizontalAlignment="Left"/>
                            </Grid>
                            <Grid>
                                <StackPanel Margin="20">
                                    <CheckBox Content="セキュリティ対策ソフトは導入されていますか?"/>
                                    <TextBlock Text="       導入されていない/ライセンス切れの場合は学校から支給されているESET Endpoint Antivirusを導入してください。"/>
                                    <Grid Height="10"/>
                                    <CheckBox Content="ウイルススキャンは実行しましたか?"/>
                                    <TextBlock Text="       スキャンを実行して潜在的なマルウェアが検出されないことを確認してください。"/>
                                    <Grid Height="10"/>
                                    <CheckBox Content="その他気になる点などはありませんか?"/>
                                    <TextBlock Text="       何かあったら必ずIT管理委員のSlackにて報告してください。"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem x:Name="others" Header="その他の機能">
                    <Grid Margin="10">
                        <TextBlock Text="新規申請許可PCのセットアップ" FontSize="16" Foreground="#FF464BA0" VerticalAlignment="Top"/>
                        <StackPanel Margin="10" VerticalAlignment="Bottom" Height="275">
                            <Grid Height="50">
                                <Separator VerticalAlignment="Top" Margin="9" Background="{DynamicResource {x:Static SystemColors.ScrollBarBrushKey}}" />
                                <TextBlock Text="プロキシ設定  " HorizontalAlignment="Left" Background="White"/>
								<StackPanel Orientation="Horizontal">
									<Button x:Name="CreateProxyShortcutToDesktop" Content="ショートカットを作る" ToolTip="デスクトップにプロキシ設定のショートカットを作成します" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="20" Width="100" Click="CreateProxyShortcutToDesktop_Click"></Button>
									<Grid Width="10"/>
									<Button x:Name="GoToProxySetting" Content="設定を開く" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="20" Width="90" Click="GoToProxySetting_Click"></Button>
								</StackPanel>
                            </Grid>
                            <Grid Height="10"/>
                            <Grid Height="50">
                                <Separator VerticalAlignment="Top" Margin="0,9,9,0" Background="{DynamicResource {x:Static SystemColors.ScrollBarBrushKey}}"/>
								<TextBlock Text="Windows Update  " Background="White" HorizontalAlignment="Left"/>
								<StackPanel Orientation="Horizontal">
									<Button x:Name="CreateUpdateShortcutToDesktop" Content="ショートカットを作る" ToolTip="デスクトップにWindows Update設定のショートカットを作成します" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="20" Width="100" Click="CreateUpdateShortcutToDesktop_Click"></Button>
									<Grid Width="10"/>
									<Button x:Name="GoToUpdateSetting" Content="設定を開く" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="20" Width="90" Click="GoToUpdateSetting_Click"></Button>
								</StackPanel>
							</Grid>
                        </StackPanel>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
